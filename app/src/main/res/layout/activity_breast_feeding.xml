<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondBackground"
    tools:context=".breastFeedingActivity">

    <View
        android:id="@+id/view2"
        android:layout_width="412dp"
        android:layout_height="64dp"
        android:layout_marginBottom="544dp"
        android:background="#E3B4A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/back2Button"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginBottom="556dp"
        android:background="#E3B4A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
        app:tint="@color/black"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/BreastFeedingTV"
        android:layout_width="261dp"
        android:layout_height="40dp"
        android:layout_marginBottom="556dp"
        android:letterSpacing="0.1"
        android:text="Breast Feeding"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/DateTimeBreastFeeding"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="428dp"
        android:background="#E8DCDC"
        android:ems="10"
        android:hint="Date and Time"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="37dp"
        android:layout_marginBottom="384dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/left"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Left"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/right"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Right"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="67dp"
        android:layout_marginBottom="304dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Spinner
            android:id="@+id/left_breast_feed_spinner"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:entries="@array/breastfeeding_time"
            android:gravity="center"
            android:prompt="@string/country_prompt"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/right_breast_feed_spinner"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/black"
            android:entries="@array/breastfeeding_time"
            android:gravity="center"
            android:prompt="@string/country_prompt"
            android:textAlignment="center" />

    </LinearLayout>

    <EditText
        android:id="@+id/breast_feeding_notes"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginBottom="80dp"
        android:background="#E8DCDC"
        android:ems="10"
        android:hint="Notes Here:"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingBottom="180dp"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="418dp"
        android:layout_height="48dp"
        android:layout_marginBottom="488dp"
        android:background="#E19F72"
        android:text="S T A R T"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save1Button"
        android:layout_width="170dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_save"
        android:text="S A V E"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>