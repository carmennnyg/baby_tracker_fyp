<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LogoutActivity">

    <Button
        android:id="@+id/backLoginButton"
        android:layout_width="315dp"
        android:layout_height="51dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/button_feeding"
        android:gravity="center"
        android:text="Back to Login"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:backgroundTint="#C8C4BD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backHomeButton"
        android:layout_width="315dp"
        android:layout_height="51dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/button_feeding"
        android:gravity="center"
        android:text="Back to Home"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:backgroundTint="#C8C4BD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/logoutSuccessfullyTV"
        android:layout_width="280dp"
        android:layout_height="79dp"
        android:layout_marginBottom="240dp"
        android:gravity="center_horizontal"
        android:text="Logout Successfully "
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="226dp"
        android:layout_height="202dp"
        android:layout_marginBottom="328dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/correct" />


</androidx.constraintlayout.widget.ConstraintLayout>